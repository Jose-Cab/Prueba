
@using Prueba.Models
@model NotaViewModel

@{
    ViewData["Title"] = "Ver Nota";
}

<h4>@ViewBag.Title</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            <h2>@Html.DisplayFor(model => model.Titulo)</h2>
        </dd>
                    <div>
            @foreach (var categoria in Model.CategoriasNota)
            {
                        <span>@categoria.Id  @categoria.Nombre</span><br />
            }
            </div>
    </dl>
</div>
<div>
    <a class="btn btn-primary mb-3" asp-action="EditarNota" asp-route-id="@Model?.Id">Editar</a>
    <a class="btn btn-secondary mb-3" asp-action="Index">Volver a Notas</a>
</div>

