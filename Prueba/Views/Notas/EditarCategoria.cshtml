@using Prueba.Entidades
@model CategoriaNota

@{
    ViewData["Title"] = "Editar Categoria";
}

<h4>@ViewBag.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarCategoria">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <button type="submit" value="Save" class="btn btn-danger mb-3">Editar</button>
                <a class="btn btn-secondary mb-3" asp-action="Categorias">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}