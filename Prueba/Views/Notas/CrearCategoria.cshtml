@using Prueba.Models
@model CategoriaNotaViewModel

@{
    ViewData["Title"] = "Crear Categoria";
}

<h4>@ViewBag.Title</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CrearCategoria">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" /><br />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="CrearCategoria" class="btn btn-primary mb-3">Crear</button>
                <a class="btn btn-secondary mb-3" asp-action="Categorias">Cancelar</a>
            </div>
        </form>
    </div>
</div>

