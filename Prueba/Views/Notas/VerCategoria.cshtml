@using Prueba.Models
@model CategoriaNotaViewModel

@{
    ViewData["Title"] = "Ver Categoria";
}

<h4>@ViewBag.Title</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            <h3>@Html.DisplayFor(model => model.Nombre)</h3>
        </dd>
                    <div>
            @foreach (var nota in Model.Notas)
            {
                            <span>@nota.Titulo</span>

                <br />
            }
            </div>
    </dl>
</div>
<div>
    <a class="btn btn-primary mb-3" asp-action="EditarCategoria" asp-route-id="@Model?.Id">Editar</a>
    <a class="btn btn-secondary mb-3" asp-action="Categorias">Volver a Categorias</a>
</div>

